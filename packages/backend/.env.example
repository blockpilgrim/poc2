# Server Configuration
NODE_ENV=development
PORT=3000

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Azure AD Configuration (Required for authentication)
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret

# D365 Configuration (Optional for POC)
D365_URL=https://your-org.crm.dynamics.com
D365_CLIENT_ID=your-d365-client-id
D365_CLIENT_SECRET=your-d365-client-secret

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Logging
LOG_LEVEL=debug
